<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="#00FF00" />
            <solid android:color="#FF0000" />
            <padding android:bottom="2dp" android:top="0dp" android:right="2dp"/>
            <corners android:radius="3dp"/>
            <gradient
                android:startColor="#33C7C7C7"
                android:centerColor="#33C7C7C7"
                android:endColor="#4D000000"
                android:angle="-90"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/white" />
            <solid android:color="@color/white" />
            <padding android:bottom="0dp" android:top="2dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

</layer-list>