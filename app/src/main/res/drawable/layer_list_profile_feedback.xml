<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/profile_feedback_option_shadow" />
            <solid android:color="@color/profile_feedback_option_shadow" />
            <padding android:bottom="1dp" android:top="0dp"/>
            <corners android:radius="3dp"/>
            <gradient
                android:startColor="#33C7C7C7"
                android:centerColor="#33C7C7C7"
                android:endColor="@color/profile_feedback_option_shadow"
                android:angle="-90"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/white" />
            <solid android:color="@color/white" />
            <padding android:bottom="0dp" android:top="2dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

</layer-list>