    <style name="MuzzleyTryAgainButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@drawable/selector_try_again_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="ButtonFooter" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_button_footer</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ButtonRoundedWhite" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_button_rounded_white</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonRoundedTransparent" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_button_rounded_transparent</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DayCheck" >
        <!-- Customize your theme here. -->
        <!--<item name="android:layout_width">wrap_content</item>-->
        <!--<item name="android:layout_height">wrap_content</item>-->
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <!--<item name="android:padding">3dp</item>-->
        <item name="android:gravity">center</item>
        <!--<item name="android:background">@drawable/time_text_selector</item>-->
        <item name="android:background">@drawable/selector_time_text_background</item>
        <item name="android:textColor">@color/selector_time_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:textAllCaps">true</item>
    </style>

