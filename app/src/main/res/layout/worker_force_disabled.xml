<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_opacity_80"
                android:clickable="true">

    <TextView
        android:id="@+id/tv2"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mobile_worker_force_disabled_title"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="@dimen/workers_progress_bar"
        android:layout_height="@dimen/workers_progress_bar"
        app:srcCompat="@drawable/icon_alert"
        android:tint="@color/red"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/tv2"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/disable_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/mobile_worker_force_disabled_text"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>