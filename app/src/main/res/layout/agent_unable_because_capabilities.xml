<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_opacity_95"
              android:clickable="true">

    <ImageView
        android:layout_marginTop="@dimen/default_layout_vertical_margin"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_constraint"
        />
    <TextView
        android:id="@+id/agent_missing_capabilities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:text="@string/worker_hardwarecapabilities_html"
        android:textColor="@color/grey"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/agent_capabilities_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/mobile_got_it"
        android:textAllCaps="true"
        style="@style/TextAppearanceMicro"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:background="@drawable/selector_agent_warning_buttons"
        android:clickable="true"
        />

</LinearLayout>