<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:id="@+id/card_view"
                                   card_view:cardBackgroundColor="@color/white"
                                   android:layout_marginRight="@dimen/divider"
                                   android:layout_width="145dp"
                                   android:layout_height="match_parent"
    >

<com.muzzley.app.cards.FieldAdsItemContainer
            android:id="@+id/ads_item"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--android:background="@drawable/ads_background"-->
    <ImageView
        android:id="@+id/image"
        android:src="@drawable/placeholder_muzzley"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/label"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        tools:text="Philips Hue Starting Kit"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/blackish"
        android:gravity="center"
        android:maxLines="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/price_range"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textStyle="italic"
        android:textColor="@color/grey"
        android:textSize="12dp"
        tools:text="$89 at Worten.pt"
        android:gravity="center"
        android:maxLines="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</com.muzzley.app.cards.FieldAdsItemContainer>
</androidx.cardview.widget.CardView>
