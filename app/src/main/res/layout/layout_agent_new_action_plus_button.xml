<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/agent_new_action_plus_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/top_line"
            android:layout_width="@dimen/device_picker_vertical_line_width"
            android:layout_height="25dp"
            android:background="@color/gray_light"
            android:layout_marginLeft="@dimen/device_picker_vertical_line_margin_left_2" />

        <ImageView
            android:id="@+id/add_action_plus_button"
            android:layout_width="@dimen/device_picker_children_image"
            android:layout_height="@dimen/device_picker_children_image"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_shortcut_add"
            android:scaleType="center"
            android:src="@drawable/icon_small_plus" />

        <TextView
            android:id="@+id/children_title"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/mobile_choose_device_vc_fourth_step"
            android:fontFamily="sans-serif-medium"
            android:textStyle="italic"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/add_action_plus_button"
            android:layout_toEndOf="@id/add_action_plus_button" />

    </RelativeLayout>
</LinearLayout>