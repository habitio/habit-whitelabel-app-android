<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:padding="@dimen/activity_horizontal_margin"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:padding="20dp"
        android:textSize="18sp"
        android:textColor="@color/blackish"
        android:text="@string/mobile_service_device_selection_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_image"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <TextView
                android:padding="10dp"
                android:layout_toRightOf="@+id/image"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/blackish"
                android:textSize="16sp"
                tools:text="Foscam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/grey"
                android:id="@+id/text"
                android:layout_below="@+id/image"
                android:text="@string/mobile_service_device_selection_camera_info_label_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit"
                android:layout_below="@+id/text"
                android:drawableRight="@drawable/ic_edit"
                android:hint="@string/insert_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:paddingTop="10dp"
                android:checked="true"
                android:layout_below="@+id/edit"
                android:button="@drawable/checkbox_padless"
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:autoLink="web"
                android:layout_toRightOf="@+id/checkbox"
                android:layout_below="@+id/edit"
                android:text="@string/terms"
                android:linksClickable="true"
                android:textColorLink="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>