<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/scene"
             android:clipChildren="false"

             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#e9f8fb"
        android:orientation="vertical">

        <TextView
            android:id="@id/label"
            android:textColor="@color/blackish"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            tools:text="Don\'t have Vdf Parenting kit ?"/>

        <TextView
            android:id="@+id/shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            tools:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum "/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/selector_button_footer"
            android:text="@string/mobile_add_service_shop"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

    </LinearLayout>

    <ImageView
        android:clipChildren="false"

        android:tint="@color/blue"
        android:id="@+id/collapse"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_blue"
        android:scaleType="center"
        android:src="@drawable/icon_collapse_arrow"/>


</FrameLayout>