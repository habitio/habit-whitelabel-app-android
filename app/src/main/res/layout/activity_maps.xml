<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                tools:context="com.muzzley.app.cards.MapsActivity">

    <com.google.android.gms.maps.MapView xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:mapType="normal" />
    <TextView
        android:background="#AFFF"
        android:textStyle="bold"
        android:id="@+id/text"
        android:padding="5dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:text="@string/unknown_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/pointer" />

    <Button
        android:id="@+id/button_set_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_button_rounded_white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/mobile_cards_location"
        android:textAllCaps="false"
        android:textColor="@color/gray_dark"
        android:textSize="16sp" />

</RelativeLayout>
